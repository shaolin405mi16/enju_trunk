<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.terminal')) -%></h1>
<div id="content_list">

<table class="index">
  <tr>
    <th rowspan="2"><%= t('activerecord.attributes.terminal.ipaddr') -%></th>
    <th rowspan="2"><%= t('activerecord.attributes.terminal.name') -%></th>
    <th rowspan="2"><%= t('activerecord.attributes.terminal.comment') -%></th>
    <th colspan="3"><%= t('activerecord.attributes.terminal.autoprint') -%></th>
    <th rowspan="2" id="edit_icons"></th>
  </tr>
  <tr>
    <th><%= t('activerecord.attributes.terminal.checkouts') -%></th>
    <th><%= t('activerecord.attributes.terminal.reserve') -%></th>
    <th><%= t('activerecord.attributes.terminal.manifestation') -%></th>
  </tr>

<% @terminals.each_with_index do |terminal, i| %>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= terminal.ipaddr %></td>
    <td><%= terminal.name %></td>
    <td><%= terminal.comment %></td>
    <td><%= terminal.checkouts_autoprint ? t('activerecord.attributes.terminal.boolean_yes') : t('activerecord.attributes.terminal.boolean_no') %></td>
    <td><%= terminal.reserve_autoprint ? t('activerecord.attributes.terminal.boolean_yes') : t('activerecord.attributes.terminal.boolean_no') %></td>
    <td><%= terminal.manifestation_autoprint ? t('activerecord.attributes.terminal.boolean_yes') : t('activerecord.attributes.terminal.boolean_no') %></td>
    <td>
      <%- if can? :update, terminal -%>
        <%= link_to image_tag('icons/page_white_edit.png', :size => '16x16', :alt => t('page.edit'), :title => t('tooltip.edit')), edit_terminal_path(terminal) -%>
      <% end %>
      <%- if can? :destroy, terminal -%>
        <%= link_to image_tag('icons/delete.png', :size => '16x16', :alt => t('page.destroy'), :title => t('tooltip.destroy')), terminal, :confirm => t('page.are_you_sure'), :method => :delete -%>
      <%- end -%>
    </td>
  </tr>
<%- end -%>
</table>

<%= paginate(@terminals) -%>
</div>
</div>

<div id="submenu" class="ui-corner-all">
  <%- if can? :create, Terminal -%>
    <ul>
      <li><%= link_to t('page.new', :model => t('activerecord.models.terminal')), new_terminal_path -%></li>
    </ul>
    <div id="iconmenu" class="ui-corner-all">
      <strong><%= t('tooltip.icons_info') -%></strong>
      <ul>
        <li><%= image_tag('icons/page_white_edit.png', :size => '16x16', :alt => t('page.edit'), :title => t('tooltip.edit')) -%>:&nbsp;<%=t('page.edit')-%></li>
        <li><%= image_tag('icons/delete.png', :size => '16x16', :alt => t('page.destroy'), :title => t('tooltip.destroy')) -%>:&nbsp;<%=t('page.destroy')-%></li>
        <li><%= image_tag('icons/cross.png', :size => '16x16', :alt => t('tooltip.unavailable'), :title => t('tooltip.unavailable'))-%>:&nbsp;<%=t('tooltip.unavailable')-%></li>
      </ul>
    </div>
  <%- end -%>
</div>
